<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qiniu.droid.video.template.demo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/template_AppTheme">
        <activity
            android:name="com.qiniu.droid.video.template.demo.acitvity.IndexActivity"
            android:theme="@style/template_AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qiniu.droid.video.template.demo.acitvity.TemplateEditActivity"
            android:theme="@style/template_AppTheme" />
        <activity
            android:name="com.qiniu.droid.video.template.demo.selector.MediaFileSelectorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/template_AppTheme" />
        <activity
            android:name="com.qiniu.droid.video.template.demo.acitvity.ImageCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/template_AppTheme" />
        <activity
            android:name="com.qiniu.droid.video.template.demo.acitvity.VideoCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/template_AppTheme" />
        <activity
            android:name="com.qiniu.droid.video.template.demo.acitvity.ExportResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/template_AppTheme" />
    </application>

</manifest>